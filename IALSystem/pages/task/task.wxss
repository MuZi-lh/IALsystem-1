.container {
  width: 100%;
}

.addTask,
.clearTask {
  position: fixed;
  right: 40rpx;
  bottom: 220rpx;
  width: 100rpx;
  height: 100rpx;
}

.clearTask {
  bottom: 80rpx;
}

.content {
  width: 720rpx;
  margin: 0rpx auto 20rpx auto;
}

.content .taskList {
  border-radius: 20rpx;
  background-color: #fff;
  margin: 0rpx auto 20rpx auto;
}

.content .taskList .image {
  float: left;
  width: 45rpx;
  height: 45rpx;
  margin: 30rpx 0 0 20rpx;
  border-radius: 50%;
}


.content .taskList .wenzi {
  padding: 20rpx 0;
  width: 635rpx;
  float: left;
  display: block;
}

.content .taskList .wenzi .details {
  display: block;
  padding-left: 30rpx;
}

.content .taskList .wenzi .deadline {
  display: block;
  padding: 10rpx 0 0 30rpx;
  font-size: 26rpx;
}