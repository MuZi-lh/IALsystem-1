.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #797979;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.content {
  position: relative;
  background-color: #fff;
  padding-left: 20rpx;
  margin: 10rpx 0 10rpx 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.content switch {
  position: absolute;
  right: 20rpx;
}
.EnglishLevel,
.number_Enword {
  position: relative;
  width: 750rpx;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}
.smallTitle {
  position: absolute;
  top: 0;
  left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
}
.choose {
  position: absolute;
  top: 0;
  right: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
  text-align: right;
}